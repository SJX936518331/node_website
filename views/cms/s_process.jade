extends layouts/layout
append loadtitle
    -title += ' | 首页-服务流程'
block cms_content
    .content_main
        mixin toastr(status, msg)
        .container-fluid
            section.todo-content
                div.panel-title.pll 服务流程
                    small 服务流程修改
            .col-md-12: .box.box-info
                .box-header.with-border: h3.box-title 服务流程修改
                form.form-horizontal(data-validate="parsley", method='post', action='/cms/s_process/update')
                    .box-body
                        .col-sm-8
                            .form-group
                                input#id(name='id',type='hidden',value="#{website.id}")
                                label.col-sm-2.control-label(for='s_process_1') 服务流程1
                                .col-sm-4: input#s_process_1.form-control.parsley-validated(name='s_process_1',type='text',placeholder='服务流程1',
                                value="#{website.s_process_1}",autocomplete="off",data-required="true")
                            .form-group
                                label.col-sm-2.control-label(for='s_process_1_content') 服务流程1内容
                                .col-sm-10: textarea#s_process_1_content.textarea.form-control.parsley-validated(name="s_process_1_content",rows="4",placeholder="服务流程1内容",
                                    autocomplete="off",data-required="true") #{website.s_process_1_content}
                            .form-group
                                label.col-sm-2.control-label(for='s_process_2') 服务流程2
                                .col-sm-4: input#s_process_2.form-control.parsley-validated(name='s_process_2',type='text',placeholder='服务流程2',
                                value="#{website.s_process_2}",autocomplete="off")
                            .form-group
                                label.col-sm-2.control-label(for='s_process_2_content') 服务流程2内容
                                .col-sm-10: textarea#s_process_2_content.textarea.form-control.parsley-validated(name="s_process_2_content",rows="4",placeholder="服务流程2内容",
                                    autocomplete="off") #{website.s_process_2_content}
                            .form-group
                                label.col-sm-2.control-label(for='s_process_3') 服务流程3
